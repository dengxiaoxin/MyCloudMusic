<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Toolbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--页面背景色-->
        <item name="android:windowBackground">@color/background_color</item>
        <!--menu的折叠按钮颜色-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!--去除ActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--定义一个小文字样式-->
    <style name="TextSmall">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--相等间隔控件-->
    <style name="SpaceView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--主题按钮 红底白字-->
    <style name="PrimaryBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/selector_color_primary</item>
        <item name="android:textColor">@color/selector_text_color_primary_reverse</item>
    </style>

    <!--主题相反按钮 白底红字-->
    <style name="PrimaryReverseBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/selector_color_primary_reverse</item>
        <item name="android:textColor">@color/selector_text_color_primary</item>
    </style>

    <!--编辑框样式-->
    <style name="EditTextStyle">
        <!--size location-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">@dimen/margin_large</item>

        <!--Skin-->
        <item name="android:background">@drawable/selector_edit_text</item>

        <!--图标属性-->
        <item name="android:drawableStart">@drawable/ic_phone</item>
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <item name="android:drawablePadding">@dimen/margin_middle</item>

    </style>

    <!--toolbar样式-->
    <!--popwindow为白色，且在在toolbar下方显示-->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:colorBackground">#000000</item> 也可以设置背景色以及menu中的其他属性-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <!--侧滑界面Item容器-->
    <style name="ItemContainer">
        <!--可点击-->
        <item name="android:clickable">true</item>

        <!--左侧padding-->
        <item name="android:paddingLeft">@dimen/margin_large</item>

        <!--右侧padding-->
        <item name="android:paddingRight">@dimen/margin_large</item>

        <!--内容垂直居中-->
        <item name="android:gravity">center_vertical</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_height</item>

        <!--内容方向为水平-->
        <item name="android:orientation">horizontal</item>
    </style>

    <!--侧滑界面Item图标-->
    <style name="ItemIcon">
        <!--宽高-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--侧滑界面Item文本-->
    <style name="ItemText">
        <!--左侧margin-->
        <item name="android:layout_marginLeft">@dimen/margin_small</item>

        <!--文本颜色-->
        <item name="android:textColor">@color/text</item>

        <!--宽高-->
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
